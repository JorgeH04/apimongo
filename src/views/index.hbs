            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          {{#each tasks}}
            <tr>
              <td></td>
              <td><strong>{{title}}</strong></td>
              <td>{{image}}</td>
              <td>{{price}}</td>
              <td>{{amount}}</td>


              <td>
                
                <a href="/delete/{{_id}}" class="btn btn-danger">
                  Delete
                </a>
                <a href="/edit/{{_id}}" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
            {{/each}} 
        </tbody>
      </table>

    </div>
  </div>

</div>